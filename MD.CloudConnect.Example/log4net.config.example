<log4net>

  <appender name="RollingFileAppenderGeneral" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\Log_"/>
    <appendToFile value="true"/>
    <staticLogFileName value="false" />
    <maxSizeRollBackups value="3"/>
    <maximumFileSize value="25MB"/>
    <rollingStyle value="Composite"/>
    <datePattern value="yyyyMMdd_HH-mm.lo\g" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d %c %m%n" />
    </layout>
  </appender>

  <appender name="RollingFileAppenderHandler" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\handler_"/>
    <appendToFile value="true"/>
    <staticLogFileName value="false" />
    <maxSizeRollBackups value="3"/>
    <maximumFileSize value="25MB"/>
    <rollingStyle value="Composite"/>
    <datePattern value="yyyyMMdd_HH.lo\g" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d %c %m%n" />
    </layout>
  </appender>

  <appender name="RollingFileAppenderNotification" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\notification_"/>
    <appendToFile value="true"/>
    <staticLogFileName value="false" />
    <maxSizeRollBackups value="3"/>
    <maximumFileSize value="25MB"/>
    <rollingStyle value="Composite"/>
    <datePattern value="yyyyMMdd.lo\g" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d %c %m%n" />
    </layout>
  </appender>

  <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender,log4net">
    <to value="" />
    <from value="" />
    <subject value="CloudConnect" />
    <smtpHost value="" />
    <port value="587" />
    <password value ="" />
    <authentication value="Basic" />
    <bufferSize value="0" />
    <username value="" />
    <bufferSize value="1" />
    <EnableSsl value="false"/>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <conversionPattern value="LEVEL: %level %newlineDATE: %date  LOGGER: %logger %newline%newline%message" />
    </layout>
  </appender>

  <logger name="General">
    <level value="ALL"/>
    <appender-ref ref="RollingFileAppenderGeneral"/>
    <appender-ref ref="SmtpAppender" />
  </logger>

  <logger name="Handler">
    <level value="ALL"/>
    <appender-ref ref="RollingFileAppenderHandler"/>
    <appender-ref ref="SmtpAppender" />
  </logger>

  <logger name="Notification">
    <level value="ALL"/>
    <appender-ref ref="RollingFileAppenderNotification"/>
  </logger>

</log4net>